#! /bin/sh
#
# bar input parser for bspwm

NORMIFS=$IFS
FIELDIFS=':'

source $(dirname $0)/panel_config

while read -r line ; do
    case $line in
        S*)
            # conky
            sys_infos="${line#?}"
            ;;
        #M*)
        #    spotify="${line#?}"
        #    ;;
        #C*)
            ##clock
            #clock="${line#?}"
            #clock="%{F$CLOCK_BG}⮂%{F- B$CLOCK_BG A:dzen_popup_toggle.sh calendar:} ${clock} %{A B- F$CLOCK_BG}⮀%{F-}"
            #;;
        T*)
            if [[ ${line#?} == "" ]]; then
                title=""
            else title="%{F$COLOR2}$(printf "%b" "\ue135")%{F-} %{A:bspc window -t floating:}$(echo ${line#?} | sed 's^\(.\{40\}\).*^\1...^')%{A}"
            fi
            ;;
        W*)
            wm_infos=""
            IFS=$FIELDIFS
            set -- ${line#?}
            while [ $# -gt 0 ] ; do
                item=$1
                case $item in
                    [OoFfUu]*)
                        name=${item#?}
                        case $name in
                            1) DESK_ICON="$(printf "%b" "\ue187")" ;;
                            2) DESK_ICON="$(printf "%b" "\ue188")" ;;
                            3) DESK_ICON="$(printf "%b" "\ue189")" ;;
                            4) DESK_ICON="$(printf "%b" "\ue18a")" ;;
                            5) DESK_ICON="$(printf "%b" "\ue18b")" ;;
                        esac
                        case $item in
                            O*)
                                # focused occupied desktop
                                desk="%{F#ff81a2be}$DESK_ICON$(printf "%b" "\ue133")%{F-}"
                                ;;
                            F*)
                                # focused free desktop
                                desk="%{F#ff8abeb7}$DESK_ICON$(printf "%b" "\ue130")%{F-}"
                                ;;
                            U*)
                                # focused urgent desktop
                                desk="%{F$COLOR1}$DESK_ICON$(printf "%b" "\ue000")%{F-}"
                                ;;
                            o*)
                                # occupied desktop
                                desk="%{F$COLOR3}$DESK_ICON$(printf "%b" "\ue008")%{F-}"
                                ;;
                            f*)
                                # free desktop
                                desk="%{F#ff555555}$DESK_ICON$(printf "%b" "\ue130")%{F-}"
                                ;;
                            u*)
                                # urgent desktop
                                desk="%{F$COLOR1}$DESK_ICON$(printf "%b" "\ue000")%{F-}"
                                ;;
                        esac
                        wm_infos="${wm_infos}%{A:bspc desktop -f ${name}:}${desk}%{A} "
                        ;;
                    [L]*)
                        if [[ ${item#?} == "T" ]]; then
                            layout="%{F#fff0c674 B#ff2a2a2a A:bspc desktop -l monocle: A3:bspc desktop -R 90:}  $(printf "%b" "\ue137")  %{A A B F-}"
                        else layout="%{F#fff0c674 B#ff2a2a2a A:bspc desktop -l tiled:}  $(printf "%b" "\ue130")  %{A B F-}"
                        fi
                        ;;
                esac
                shift
            done
            IFS=$NORMIFS
            ;;
    esac
    printf "%s\n" "%{l B#ff333333}  $wm_infos %{B-}$layout  $title $sys_infos"
done
