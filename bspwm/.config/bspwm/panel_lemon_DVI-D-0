#! /bin/sh
#
# bar input parser for bspwm

NORMIFS=$IFS
FIELDIFS=':'

source $(dirname $0)/panel_config

while read -r line ; do
    case $line in
        S*)
            sys_infos="${line#?}"
            ;;
        T*)
            if [[ ${line#?} == "" ]]; then
                title="%{F#FF$RED_COLOR}$(printf "%b" "\ue0a1")%{F-} $(uname -r)"
            else title="%{F#FF$RED_COLOR}$(printf "%b" "\ue135")%{F-} %{A:bspc window -t floating: A3:bspc desktop -R 90:}$(echo ${line#?} | sed 's^\(.\{40\}\).*^\1...^')%{A A-}"
            fi
            ;;
        W*)
            wm_infos=""
            IFS=$FIELDIFS
            set -- ${line#?}
            while [ $# -gt 0 ] ; do
                item=$1
                case $item in
                    [OoFfUu]*)
                        name=${item#?}
                        case $name in
                            1) DESK_ICON="" ;;
                            2) DESK_ICON="" ;;
                            3) DESK_ICON="" ;;
                            4) DESK_ICON="" ;;
                            5) DESK_ICON="" ;;
                        esac
                        case $item in
                            O*)
                                # focused occupied desktop
                                desk="%{F#FF$RED_COLOR}$DESK_ICON $(printf '%b' "\ue056")%{F-}"
                                ;;
                            F*)
                                # focused free desktop
                                desk="%{F#FF$RED_COLOR}$DESK_ICON $(printf '%b' "\ue056")%{F-}"
                                ;;
                            U*)
                                # focused urgent desktop
                                desk="%{F#FF$GREEN_COLOR}$DESK_ICON $(printf '%b' "\ue056")%{F-}"
                                ;;
                            o*)
                                # occupied desktop
                                desk="%{F#FF$FOREGROUND_COLOR}$DESK_ICON $(printf '%b' "\ue056")%{F-}"
                                ;;
                            f*)
                                # free desktop
                                desk="%{F#FF$FOREGROUND_COLOR}$DESK_ICON $(printf '%b' "\ue0e6")%{F-}"
                                ;;
                            u*)
                                # urgent desktop
                                desk="%{F#FF$GREEN_COLOR}$DESK_ICON $(printf '%b' "\ue056")%{F-}"
                                ;;
                        esac
                        wm_infos="${wm_infos}%{A:bspc desktop -f ${name}:}${desk}%{A}"
                        ;;
                esac
                shift
            done
            IFS=$NORMIFS
            ;;
    esac
    printf "%s\n" "%{l} $title %{c}$wm_infos $sys_infos "
done
