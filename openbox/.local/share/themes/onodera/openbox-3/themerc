## BORDERS

# Hide bloat
window.handle.width: 0
window.client.padding.width: 0

# Set border width
border.width: 0

# Set border color
window.*.client.color: #283634

## TITLE

# Add some padding
padding.width: 3
padding.height: 3

# Set title colors
window.*.title.bg: Solid Flat
window.*.*.bg: Parentrelative
window.active.title.bg.color: #000000
window.inactive.title.bg.color: #000000
window.inactive.label.text.color: #999999
window.active.label.text.color: #ffffff

# Set buttons color
window.inactive.button.*.image.color: #999999
window.active.button.*.image.color: #ffffff

## MENU

# Set menu colors
menu.*.bg: Solid Flat
menu.title.text.color: #ffffff
menu.items.bg.color: #000000
menu.items.text.color: #ffffff
menu.items.active.bg.color: #ffffff
menu.items.active.text.color: #000000

# Add some padding
menu.border.width: 5
menu.border.color: #000000

# Add some submenu padding
menu.overlap.x: -10
menu.overlap.y: 0

# Add padding between items
menu.separator.padding.height: 3
menu.separator.color: #111111
